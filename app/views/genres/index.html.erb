<h1 align = "center">All Genre</h1>
<div align = "center">
  <%= will_paginate %>
</div>
<% @genres.each do |genre|%>
  <div class = "row">
    <div class= "col-xs-4 col-xs-offset-4 center">
      <div class = "well well-lg">
        <div class = "title">
          <%= genre.genre_name%>
        </div>
        
        <div class = "body">
          <%= truncate(genre.genre_description, length: 100)%>
        </div>

        <% if logged_in? %>
          <div class = "action">
            <%= link_to 'Edit this Genre', edit_genre_path(genre), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this Genre", genre_path(genre), method: :delete,
                data: {confirm: "Are you sure you want to delete the Genre?"}, 
                class: "btn btn-xs btn-danger"%>

          </div>
        <% end %>
      </div>
    </div>
  </div>
<div align = "center">
  <%= will_paginate %>
</div>
<%end%>