<%= render 'shared/errors', obj: @movie %>

  <div class='row'>
    <div class='col-xs-12'>
      <%= form_for(@movie, :html => {class: "form-horizontal", role: "form", multipart: true}) do |f| %>

      <div class= "form-group">
        <div class= "control-label col-sm-4">
          <%= f.label :title %>
        </div>

        <div class="col-sm-4">
          <%= f.text_field :title, class: "form-control", placeholder: "Enter Title", autofocus: true %>
        </div>
      </div>

      <div class= "form-group">
        <div class= "control-label col-sm-4">
          <%= f.label :movie_poster %>
        </div>

        <div class="col-sm-4">
          <%= f.file_field :movie_poster, autofocus: true %>
        </div>
      </div>

      <div class= "form-group">
        <div class= "control-label col-sm-4">
          <%= f.label :movie_background_poster %>
        </div>

        <div class="col-sm-4">
          <%= f.file_field :movie_background_poster, autofocus: true %>
        </div>
      </div>

      <div class= "form-group">
        <div class= "control-label col-sm-4">
          <%= f.label :short_desc %>
        </div>

        <div class="col-sm-4">
          <%= f.text_field :short_desc, class: "form-control", autofocus: true %>
        </div>
      </div>

      <div class= "form-group">
        <div class= "control-label col-sm-4">
          <%= f.label :full_desc %>
        </div>

        <div class="col-sm-4">
          <%= f.text_area :full_desc,row: 8, class: "form-control", autofocus: true %>
        </div>
      </div>

      <div class= "form-group">
        <div class= "control-label col-sm-4">
          <%= f.label "Movie Type" %>
        </div>

        <div class="col-sm-1">
          <%= f.label :isMovie3D, "3D", :value => "true"  %>
          <%= f.radio_button :isMovie3D, true, autofocus: true %>
        </div>
        <div class="col-sm-1">
          <%= f.label :isMovie3D, "2D", :value => "false"  %>
          <%= f.radio_button :isMovie3D, false, autofocus: true %>
        </div>

      </div>

      <div class="form-group">
          <div class="col-sm-offset-2 col-md-8 center">
            <%= f.submit(@movie.new_record? ? "Register" : "Update", class: "btn btn-primary btn-lg")%>
          </div>
      </div>

      <div class= "col-xs-4 col-xs-offset-4 center">
        [ <%= link_to 'Cancel request and return to Genre Listing', genres_path %> ]
      </div>
      <% end %>
    </div>
  </div>