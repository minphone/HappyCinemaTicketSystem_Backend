<h1 class = "center">All Region</h1>
<div class = "center">
  <%= will_paginate %>
    <% @regions.each do |region| %>
      <ul class = "listing">
        <div class = 'row'>
          <div class = "well col-md-4 col-md-offset-4">
            <li class= "title">
              <%= region.region_name %>
            </li>
            <% if logged_in? %>
              <div class = "action">
                <%= link_to 'Edit this Region', edit_region_path(region), class: "btn btn-xs btn-primary" %>
                <%= link_to "Delete this Region", region_path(region), method: :delete,
                    data: {confirm: "Are you sure you want to delete this Region?"}, 
                    class: "btn btn-xs btn-danger"%>

              </div>
            <% end %>
          </div>
        </div>
      </ul>
    <% end %>
  <%= will_paginate %>
</div>