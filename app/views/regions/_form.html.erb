<%= render 'shared/errors', obj: @region %>

  <div class='row'>
    <div class='col-xs-12'>

      <%= form_for(@region, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class= "form-group">
        <div class= "control-label col-sm-4">
          <%= f.label :region_name %>
        </div>

        <div class="col-sm-4">
          <%= f.text_field :region_name, class: "form-control", placeholder: "Enter User Name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
          <div class="col-sm-offset-2 col-md-8 center">
            <%= f.submit(@region.new_record? ? "Register" : "Update", class: "btn btn-primary btn-lg")%>
          </div>
      </div>

      <div class= "col-xs-4 col-xs-offset-4 center">
        [ <%= link_to 'Cancel request and return to Region Listing', regions_path %> ]
      </div>

    </div>
  </div>
<% end %>